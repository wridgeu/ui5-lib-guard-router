{
	"name": "ui5-lib-guard-router-monorepo",
	"private": true,
	"author": "Marco Beier",
	"repository": {
		"type": "git",
		"url": "https://github.com/wridgeu/ui5-guard-router.git"
	},
	"engines": {
		"node": ">=22"
	},
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"clean": "npm run clean --workspaces",
		"fmt": "oxfmt .",
		"fmt:check": "oxfmt --check .",
		"lint": "oxlint packages/ --tsconfig tsconfig.base.json --import-plugin --deny-warnings",
		"lint:fix": "oxlint packages/ --tsconfig tsconfig.base.json --import-plugin --fix",
		"check": "npm run fmt:check && npm run lint && npm run typecheck",
		"typecheck": "tsc --noEmit -p packages/lib/tsconfig.json && tsc --noEmit -p packages/demo-app/tsconfig.json",
		"build": "npm run build --workspace=packages/lib",
		"start": "npm start --workspace=packages/demo-app",
		"start:lib": "npm start --workspace=packages/lib",
		"serve:demo": "npm run serve --workspace=packages/demo-app",
		"test": "npm run test:qunit && npm run test:e2e",
		"test:qunit": "start-server-and-test start:lib http://localhost:8080 \"npx wdio run packages/lib/test/wdio-qunit.conf.ts\"",
		"test:e2e": "start-server-and-test serve:demo http://localhost:8080 \"npx wdio run packages/demo-app/test/wdio.conf.ts\"",
		"pack:check": "npm pack -w packages/lib --dry-run",
		"prepare": "husky"
	},
	"lint-staged": {
		"packages/**/*.ts": [
			"oxlint --fix --tsconfig tsconfig.base.json --import-plugin --deny-warnings",
			"oxfmt"
		],
		"*.{json,md,yaml,yml}": "oxfmt"
	},
	"devDependencies": {
		"@openui5/types": "1.144.0",
		"@wdio/cli": "^9.0.0",
		"@wdio/local-runner": "^9.0.0",
		"@wdio/mocha-framework": "^9.0.0",
		"@wdio/spec-reporter": "^9.0.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"oxfmt": "^0.28.0",
		"oxlint": "^1.43.0",
		"rimraf": "^6.0.0",
		"start-server-and-test": "^2.1.3",
		"typescript": "~5.7.0",
		"wdio-qunit-service": "^2.0.0",
		"wdio-ui5-service": "^3.0.0"
	}
}
